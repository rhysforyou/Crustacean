---
extends:
  - eslint:recommended
  - plugin:react/recommended
  - plugin:react-native/all
  - plugin:flowtype/recommended
plugins:
  - react
  - react-native
  - flowtype
parser: babel-eslint
parserOptions:
  ecmaVersion: 6
  sourceType: module
  ecmaFeatures:
    jsx: true
env:
  browser: true
  es6: true
globals:
  module: true
  NODE_ENV: true
rules:
  jsx-a11y/label-has-for: off
  no-console:
    - error
    - allow:
      - warn
      - error
      - info
